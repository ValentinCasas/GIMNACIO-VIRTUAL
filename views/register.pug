extends layout

block content

    head
        title Register
        link(rel='stylesheet' href='/login.css')
        link(rel='stylesheet' href='/register.css')
        script(src="/register.js" defer)

    body


        section#form.d-flex.justify-content-start.align-item-start
            //formularo de registro
            form.form.col.col-xs-12.col-sm-12.col-md-6.col-lg-6(action="/auth/signup" method="post" enctype="multipart/form-data")
                p.form-title.mt-4 Registrate!

                .row.input-container
                    .col-lg-6.col-md-6.col-sm-12.col-xs-12
                        .form-floating
                            input.form-control#nameInput(name="nombre" placeholder="Ingrese el nombre" type="text")
                            label(for="nameInput") Nombre

                    .col-lg-6.col-md-6.col-sm-12.col-xs-12.mt-2
                        .form-floating
                            select.form-select#trainingLevelSelect(name="nivelEntrenamiento")
                                option.form-select(value='1') Bajo
                                option.form-select(value='2') Intermedio 
                                option.form-select(value='3') Alto
                            label(for="trainingLevelSelect") Nivel de entrenamiento

                .row.input-container
                    .col-12
                        .form-floating
                            input.form-control#goalsInput(name="objetivos" placeholder="Objetivos del entrenamiento" type="text")    
                            label(for="goalsInput") Objetivos del entrenamiento

                .row.input-container
                    .col-12
                        .form-floating
                            input.form-control#emailInput(name="mail" placeholder="Ingrese el correo electrónico" type="email")
                            label(for="emailInput") Correo electrónico

                .row.input-container
                    .col-lg-6.col-md-6.col-sm-12.col-xs-12
                        .form-floating
                            input.form-control#passwordInput(name="contrasenia" placeholder="Ingrese la contraseña" type="password")
                            label(for="passwordInput") Contraseña

                    .col-lg-6.col-md-6.col-sm-12.col-xs-12
                        .form-floating
                            input.form-control#confirmPasswordInput(name="confirmarContrasenia" placeholder="Confirme la contraseña" type="password")
                            label(for="confirmPasswordInput") Confirmar contraseña  

                .row.input-container 

                if (rol === 'administrador') 
                    .row.input-container
                        .col-12
                            .form-floating
                                select.form-select#trainingLevelSelect(name="rol")
                                    option.form-select(value='1') Cliente
                                    option.form-select(value='3') Empleado 
                                    option.form-select(value='2') ADMINISTRADOR
                                label(for="rol") Rol

                .container
                    .header
                        svg(viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                            g#SVGRepo_bgCarrier(stroke-width="0")
                            g#SVGRepo_tracerCarrier(stroke-linecap="round" stroke-linejoin="round")
                            g#SVGRepo_iconCarrier
                                path(d="M7 10V9C7 6.23858 9.23858 4 12 4C14.7614 4 17 6.23858 17 9V10C19.2091 10 21 11.7909 21 14C21 15.4806 20.1956 16.8084 19 17.5M7 10C4.79086 10 3 11.7909 3 14C3 15.4806 3.8044 16.8084 5 17.5M7 10C7.43285 10 7.84965 10.0688 8.24006 10.1959" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                        p Ingresa tu foto de perfil!
                    label.footer(for="file")
                        svg(fill="#000000" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg")
                            g#SVGRepo_bgCarrier(stroke-width="0")
                            g#SVGRepo_tracerCarrier(stroke-linecap="round" stroke-linejoin="round")
                            g#SVGRepo_iconCarrier
                                path(d="M15.331 6H8.5v20h15V14.154h-8.169")
                                path(d="M18.153 6h-.009v5.342H23.5v-.002")
                        p Nada seleccionado
                        svg(viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                            g#SVGRepo_bgCarrier(stroke-width="0")
                            g#SVGRepo_tracerCarrier(stroke-linecap="round" stroke-linejoin="round")
                            g#SVGRepo_iconCarrier
                                path(d="M5.16565 10.1534C5.07629 8.99181 5.99473 8 7.15975 8H16.8402C18.0053 8 18.9237 8.9918 18.8344 10.1534L18.142 19.1534C18.0619 20.1954 17.193 21 16.1479 21H7.85206C6.80699 21 5.93811 20.1954 5.85795 19.1534L5.16565 10.1534Z" stroke="#000000" stroke-width="2")
                                path(d="M19.5 5H4.5" stroke="#000000" stroke-width="2" stroke-linecap="round")
                                path(d="M10 3C10 2.44772 10.4477 2 11 2H13C13.5523 2 14 2.44772 14 3V5H10V3Z" stroke="#000000" stroke-width="2")
                    input#file(type="file" name="imagenPerfil")


                button.submit.mt-4(type="submit") ENVIAR
                p.signup-link.mt-4
                    | ¿Ya tenés una cuenta?
                    a(href="/auth/view/login").mx-2.mb-4 Logueate

            //imagen 
            div.img-login.col-xs-12.col-sm-12.col-md-6.col-lg-6